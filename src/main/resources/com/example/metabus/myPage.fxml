<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="400.0" prefWidth="600.0" styleClass="bg" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.metabus.MyPageController">
   <children>
      <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="600.0">
               <children>
                  <Label text="HELLO, ">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets left="30.0" />
                     </padding>
                  </Label>
                  <Label fx:id="lblName" prefWidth="400.0">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <Button fx:id="btnSend" mnemonicParsing="false" onAction="#sendData" prefHeight="40.0" prefWidth="40.0" styleClass="btn">
                     <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@img/send.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <Accordion prefHeight="330.0" prefWidth="600.0" stylesheets="@stylesheet.css">
              <panes>
                <TitledPane animated="false" stylesheets="@stylesheet.css" text="Checked Facility">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="240.0" prefWidth="600.0" />
                  </content>
                </TitledPane>
                <TitledPane animated="false" prefHeight="240.0" prefWidth="600.0" stylesheets="@stylesheet.css" text="Checked Route">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="250.0" prefWidth="600.0" />
                  </content>
                </TitledPane>
                <TitledPane animated="false" stylesheets="@stylesheet.css" text="Frequently Used Facility">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="230.0" prefWidth="600.0" />
                  </content>
                </TitledPane>
                  <TitledPane animated="false" layoutX="10.0" layoutY="32.0" prefHeight="276.0" prefWidth="600.0" stylesheets="@stylesheet.css" text="Frequently Used Route">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="250.0" prefWidth="200.0" />
                     </content>
                  </TitledPane>
              </panes>
            </Accordion>
         </children>
      </VBox>
   </children>
</StackPane>
